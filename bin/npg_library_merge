#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use Log::Log4perl qw(:levels);

use npg_seq_melt::merge::library;

our $VERSION = '0';

my $layout = '%d %-5p %c - %m%n';
Log::Log4perl->easy_init({layout => $layout,
                          level  => $INFO,
                          utf8   => 1});

npg_seq_melt::merge::library->new_with_options()->process();

exit 0;

__END__

=head1 NAME

npg_library_merge

=head1 USAGE

npg_library_merge [-?h] [long options...]

npg_library_merge 

           --rpt_list        '14582:7;14582:8' 
           --library         11869933 
           --sample          1993949
           --study           3149 
           --instrument_type HiSeqX 
           --run_type        paired 
           --chemistry       HiSeqX_V1
           --use_cloud
           --crams_in_s3
           --local
           --reheader_rt_ticket int  (with --nosample_acc_check and --sample_accession_number)


